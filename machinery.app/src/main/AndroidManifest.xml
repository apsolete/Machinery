<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.apsolete.machinery.activity"
          xmlns:android="http://schemas.android.com/apk/res/android">
          
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.apsolete.machinery.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.apsolete.machinery.references.ReferencesActivity"
            android:label="@string/title_references"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.apsolete.machinery.activity.com.apsolete.machinery.MainActivity">
        </activity>
        <activity
            android:name="com.apsolete.machinery.calculation.DesignActivity"
            android:label="@string/title_gears_design"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.apsolete.machinery.activity.com.apsolete.machinery.MainActivity">
        </activity>
    </application>

</manifest>
