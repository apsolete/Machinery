<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/contentCg"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Set of gears"
		android:id="@+id/setOfGearsText"/>

	<LinearLayout
		android:id="@+id/oneSetLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/setOfGearsText">

		<CheckBox
			android:id="@+id/oneSetForAllGears"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="One set for all"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="8dp"/>

		<Button
			android:id="@+id/z0Set"
			android:text="Gears"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        
        <EditText
            android:id="@+id/z0Gears"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="number|text"
            android:maxEms="16"
            android:minEms="6"/>

	</LinearLayout>

	<HorizontalScrollView
		android:id="@+id/gearsetScroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/oneSetLayout">

		<GridLayout
			android:id="@+id/gearsetGrid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:columnCount="4"
			android:rowCount="3">

			<LinearLayout
				android:id="@+id/z1Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="0"
				android:orientation="horizontal"
				android:padding="10dp">

				<Button
					android:id="@+id/z1Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z1:"
					android:textColor="@android:color/holo_red_dark"/>

				<CheckBox
					android:id="@+id/z1Select"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:checked="true"
					android:enabled="false"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z1Gears"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:inputType="number|text"
					android:maxEms="6"
					android:minEms="3"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z2Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="0"
				android:orientation="horizontal"
				android:padding="10dp">

				<Button
					android:id="@+id/z2Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z2:"
					android:textColor="@android:color/holo_blue_dark"/>

				<CheckBox
					android:id="@+id/z2Select"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:checked="true"
					android:enabled="false"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z2Gears"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:inputType="number|text"
					android:maxEms="6"
					android:minEms="3"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z3Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="1"
				android:orientation="horizontal"
				android:padding="10dp">

				<Button
					android:id="@+id/z3Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z3:"
					android:textColor="@android:color/holo_blue_dark"/>

				<CheckBox
					android:id="@+id/z3Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z3Gears"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:inputType="number|text"
					android:maxEms="6"
					android:minEms="3"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z4Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_row="1"
				android:orientation="horizontal"
				android:padding="10dp">

				<Button
					android:id="@+id/z4Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z4:"
					android:textColor="@android:color/holo_green_dark"/>

				<CheckBox
					android:id="@+id/z4Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z4Gears"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:inputType="number|text"
					android:maxEms="6"
					android:minEms="3"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z5Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_row="2"
				android:orientation="horizontal"
				android:padding="10dp">

				<Button
					android:id="@+id/z5Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z5:"
					android:textColor="@android:color/holo_green_dark"/>

				<CheckBox
					android:id="@+id/z5Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z5Gears"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:inputType="number|text"
					android:maxEms="6"
					android:minEms="3"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z6Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="3"
				android:layout_row="2"
				android:orientation="horizontal"
				android:padding="10dp">

				<Button
					android:id="@+id/z6Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z6:"
					android:textColor="@android:color/holo_orange_dark"/>

				<CheckBox
					android:id="@+id/z6Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z6Gears"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:inputType="number|text"
					android:maxEms="6"
					android:minEms="3"/>

			</LinearLayout>

		</GridLayout>

	</HorizontalScrollView>

	<LinearLayout
		android:id="@+id/gearRatioLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/gearsetScroll"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/gearRatioText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Gear Ratio"
			android:layout_gravity="center_vertical"/>

		<EditText
			android:id="@+id/gearRatio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:ems="10"
			android:inputType="numberDecimal"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/progressLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/gearRatioLayout"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/calculate"
			android:src="@drawable/ic_settings_white_24dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<ProgressBar
			android:id="@+id/progressBar"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/resultLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/progressLayout"
		android:orientation="vertical">

	</LinearLayout>

</RelativeLayout>

