<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/contentCg"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Switch
        android:id="@+id/oneSetForAllGears"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="One Set for All Gears"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold|italic"/>
    
	<LinearLayout
		android:id="@+id/oneSetLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/oneSetForAllGears">

		<Button
			android:id="@+id/z0Set"
			android:text="Gears"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_margin="8dp"/>

		<EditText
			android:id="@+id/z0Gears"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="number|text"
			android:maxEms="16"
			android:minEms="6"
			android:layout_weight="1"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_gravity="center_vertical"/>

	</LinearLayout>

	<HorizontalScrollView
		android:id="@+id/gearsetScroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/oneSetLayout">

		<GridLayout
			android:id="@+id/gearsetGrid"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:columnCount="4"
			android:rowCount="3">

			<LinearLayout
				android:id="@+id/z1Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="0"
				android:orientation="horizontal"
				android:padding="8dp">

				<Button
					android:id="@+id/z1Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z1:"
					android:textColor="@android:color/holo_red_dark"/>

				<CheckBox
					android:id="@+id/z1Select"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:checked="true"
					android:enabled="false"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z1Gears"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number|text"
					android:maxEms="8"
					android:minEms="3"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z2Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="0"
				android:orientation="horizontal"
				android:padding="8dp">

				<Button
					android:id="@+id/z2Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z2:"
					android:textColor="@android:color/holo_blue_dark"/>

				<CheckBox
					android:id="@+id/z2Select"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:checked="true"
					android:enabled="false"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z2Gears"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number|text"
					android:maxEms="8"
					android:minEms="3"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z3Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="1"
				android:orientation="horizontal"
				android:padding="8dp">

				<Button
					android:id="@+id/z3Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z3:"
					android:textColor="@android:color/holo_blue_dark"/>

				<CheckBox
					android:id="@+id/z3Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z3Gears"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number|text"
					android:maxEms="8"
					android:minEms="3"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z4Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_row="1"
				android:orientation="horizontal"
				android:padding="8dp">

				<Button
					android:id="@+id/z4Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z4:"
					android:textColor="@android:color/holo_green_dark"/>

				<CheckBox
					android:id="@+id/z4Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z4Gears"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number|text"
					android:maxEms="8"
					android:minEms="3"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z5Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_row="2"
				android:orientation="horizontal"
				android:padding="8dp">

				<Button
					android:id="@+id/z5Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z5:"
					android:textColor="@android:color/holo_green_dark"/>

				<CheckBox
					android:id="@+id/z5Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z5Gears"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number|text"
					android:maxEms="8"
					android:minEms="3"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/z6Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="3"
				android:layout_row="2"
				android:orientation="horizontal"
				android:padding="8dp">

				<Button
					android:id="@+id/z6Set"
					android:layout_width="46dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Z6:"
					android:textColor="@android:color/holo_orange_dark"/>

				<CheckBox
					android:id="@+id/z6Select"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:visibility="gone"/>

				<EditText
					android:id="@+id/z6Gears"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="number|text"
					android:maxEms="8"
					android:minEms="3"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

		</GridLayout>

	</HorizontalScrollView>

	<Spinner
		android:id="@+id/calcTypeSpinner"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_below="@id/gearsetScroll"/>

	<LinearLayout
		android:id="@+id/threadPitchLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@id/calcTypeSpinner">

		<TextView
			android:id="@+id/threadPitchText"
			android:text="Thread Pitch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"/>

		<EditText
			android:id="@+id/threadPitchValue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="6"
			android:inputType="numberDecimal"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"/>

		<Spinner
			android:id="@+id/threadUnitSpinner"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="8dp"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/screwPitchLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/threadPitchLayout"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/screwPitchText"
			android:text="Screw Pitch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"/>

		<EditText
			android:id="@+id/screwPitchValue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="6"
			android:inputType="numberDecimal"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"/>

		<Spinner
			android:id="@+id/screwUnitSpinner"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="8dp"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/gearRatioLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/screwPitchLayout"
		android:orientation="vertical">

		<Switch
			android:id="@+id/ratioAsFractionSwitch"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="Set Ratio as a Fraction"
			android:layout_margin="8dp"
			android:textColor="@android:color/holo_green_dark"
			android:textStyle="bold|italic"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/gearRatioText"
				android:text="Gear Ratio:"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_margin="8dp"/>

			<EditText
				android:id="@+id/gearRatioValue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="6"
				android:inputType="numberDecimal"
				android:layout_margin="8dp"
				android:layout_gravity="center_vertical"/>

			<LinearLayout
				android:id="@+id/gearRatioDenominatorLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/solidusText"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="/"
					android:layout_margin="8dp"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_gravity="center_vertical"/>

				<EditText
					android:id="@+id/gearRatioDenominator"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_margin="8dp"
					android:ems="6"
					android:inputType="numberDecimal"
					android:layout_gravity="center_vertical"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:id="@+id/ratioResultText"
		android:text="R = 0.0"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_margin="8dp"
		android:layout_below="@id/gearRatioLayout"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<LinearLayout
		android:id="@+id/progressLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ratioResultText"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/calculate"
			android:src="@drawable/ic_settings_white_24dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"/>

		<ProgressBar
			android:id="@+id/progressBar"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="10dp"/>

		<ImageButton
			android:id="@+id/showPrev"
			android:src="@drawable/ic_settings_white_24dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"/>

		<TextView
			android:id="@+id/fromNumberText"
			android:text="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"
			android:gravity="center"/>

		<TextView
			android:text="-"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"
			android:gravity="center"/>

		<TextView
			android:id="@+id/toNumberText"
			android:text="100"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"
			android:gravity="center"/>

		<ImageButton
			android:id="@+id/showNext"
			android:src="@drawable/ic_settings_white_24dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="8dp"/>

	</LinearLayout>

    <ScrollView
        android:id="@+id/resultsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/progressLayout">
        <LinearLayout
            android:id="@+id/resultsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
	

</RelativeLayout>

