<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/border"
	android:orientation="horizontal"
	android:padding="8dp">

	<TextView
		android:id="@+id/resultNumberText"
		android:layout_width="50dp"
		android:layout_height="match_parent"
		android:layout_marginEnd="4dp"
		android:gravity="center_vertical"
		android:text="100"
		android:textAlignment="center"/>

	<LinearLayout
		android:id="@+id/gears12Layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginStart="4dp"
		android:layout_marginEnd="4dp">

		<TextView
			android:id="@+id/z1Text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="999"
			android:textAlignment="center"
			android:textColor="@android:color/holo_red_dark"/>

		<TextView
			android:id="@+id/z1z2Div"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="------"
			android:textAlignment="center"/>

		<TextView
			android:id="@+id/z2Text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="999"
			android:textAlignment="center"
			android:textColor="@android:color/holo_blue_dark"/>

	</LinearLayout>

	<TextView
		android:id="@+id/mult1"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:text=" * "
		android:textAlignment="center"
		android:visibility="gone"/>

	<LinearLayout
		android:id="@+id/gears34Layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
        android:layout_marginStart="4dp"
		android:layout_marginEnd="4dp">

		<TextView
			android:id="@+id/z3Text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="999"
			android:textAlignment="center"
			android:textColor="@android:color/holo_blue_dark"
			android:gravity="right"/>

		<TextView
			android:id="@+id/z3z4Div"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="* ------"
			android:textAlignment="center"/>

		<TextView
			android:id="@+id/z4Text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="999"
			android:textAlignment="center"
			android:textColor="@android:color/holo_green_dark"
			android:gravity="right"/>

	</LinearLayout>

	<TextView
		android:id="@+id/mult2"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:text=" * "
		android:textAlignment="center"
		android:visibility="gone"/>

	<LinearLayout
		android:id="@+id/gears56Layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
        android:layout_marginStart="4dp"
		android:layout_marginEnd="4dp">

		<TextView
			android:id="@+id/z5Text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="999"
			android:textColor="@android:color/holo_green_dark"
			android:gravity="right"
			android:textAlignment="center"/>

		<TextView
			android:id="@+id/z5z6Div"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="* ------"
			android:textAlignment="center"/>

		<TextView
			android:id="@+id/z6Text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="999"
			android:textAlignment="center"
			android:textColor="@android:color/holo_orange_dark"
			android:gravity="right"/>

	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:text=" = "
		android:textAlignment="center"/>

	<TextView
		android:id="@+id/ratioText"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:text="0.99999"
		android:textAlignment="gravity"
        android:layout_marginStart="4dp"
		android:layout_marginEnd="4dp"/>

	<LinearLayout
		android:id="@+id/threadPitchLayout"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginStart="10dp"
		android:visibility="gone">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text=" TP "
			android:textAlignment="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text=" = "
			android:textAlignment="center"
			android:layout_marginStart="4dp"
			android:layout_marginEnd="4dp"/>

		<TextView
			android:id="@+id/threadPitchText"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="0.99999"
			android:textAlignment="gravity"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

	</LinearLayout>

</LinearLayout>

