<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/z1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/z1z2Div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/z2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="999"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/mult1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text=" * "
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/z3Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/z3z4Div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/z4Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/mult2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text=" * "
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/z5Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"/>

        <TextView
            android:id="@+id/z5z6Div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="------"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/z6Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text=" = "
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/ratioText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="0.99"/>
</LinearLayout>