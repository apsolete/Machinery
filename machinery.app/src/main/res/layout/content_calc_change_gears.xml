<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/contentMgt"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Set of gears"
		android:id="@+id/setofgears_text"/>

	<GridLayout
		android:columnCount="4"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:rowCount="3"
		android:layout_below="@id/setofgears_text"
		android:id="@+id/contentmachinegeartrainGridLayout1">

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="0"
			android:layout_row="0"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="1"
			android:layout_row="0"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="2"
			android:layout_row="0"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="3"
			android:layout_row="0"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="0"
			android:layout_row="1"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="1"
			android:layout_row="1"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="2"
			android:layout_row="1"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="3"
			android:layout_row="1"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="0"
			android:layout_row="2"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="1"
			android:layout_row="2"/>

		<include
            layout="@layout/mgt_gearset"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="2"
			android:layout_row="2"/>

		<include
            layout="@layout/mgt_gearset"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_column="3"
			android:layout_row="2"/>

	</GridLayout>

	<EditText
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:inputType="number"
		android:ems="10"
		android:layout_below="@id/contentmachinegeartrainGridLayout1"/>

</RelativeLayout>

