<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentMgt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Set of gears"
        android:id="@+id/setofgears_text"/>

    <HorizontalScrollView
        android:id="@+id/gearssetScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setofgears_text">

        <GridLayout
            android:id="@+id/gearssetGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="3">

            <LinearLayout
                android:id="@+id/z1Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/z1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z1:"/>

                <EditText
                    android:id="@+id/z1Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z2Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/z2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z2:"/>

                <EditText
                    android:id="@+id/z2Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z3Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/z3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z3:"/>

                <EditText
                    android:id="@+id/z3Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z4Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/z4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z4:"/>

                <EditText
                    android:id="@+id/z4Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z5Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/z5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z5:"/>

                <EditText
                    android:id="@+id/z5Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z6Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/z6Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z6:"/>

                <EditText
                    android:id="@+id/z6Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_white_24dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </GridLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/gearRatioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gearssetScroll"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gearRatioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gear Ratio"/>

        <EditText
            android:id="@+id/gearRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"/>

    </LinearLayout>

</RelativeLayout>

