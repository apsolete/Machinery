<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentMgt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Set of gears"
        android:id="@+id/setofgears_text"/>

    <HorizontalScrollView
        android:id="@+id/gearsetScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setofgears_text">

        <GridLayout
            android:id="@+id/gearsetGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="3">

            <LinearLayout
                android:id="@+id/z1Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/z1Set"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z1:"
                    android:textColor="@android:color/holo_red_dark"/>

                <EditText
                    android:id="@+id/z1Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z2Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/z2Set"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z2:"
                    android:textColor="@android:color/holo_blue_dark"/>

                <EditText
                    android:id="@+id/z2Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z3Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/z3Set"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Z3:"
                    android:textColor="@android:color/holo_blue_dark"/>

                <EditText
                    android:id="@+id/z3Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z4Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/z4Set"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Z4:"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:id="@+id/z4Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z5Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/z5Set"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Z5:"
                    android:textColor="@android:color/holo_green_dark"/>

                <EditText
                    android:id="@+id/z5Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/z6Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/z6Set"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="Z6:"
                    android:textColor="@android:color/holo_orange_dark"/>

                <EditText
                    android:id="@+id/z6Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:inputType="number|text"
                    android:maxEms="6"
                    android:minEms="3"/>

            </LinearLayout>

        </GridLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/gearRatioLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gearsetScroll"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gearRatioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gear Ratio"/>

        <EditText
            android:id="@+id/gearRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gearRatioLayout"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/z1ResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/z2ResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text=" * "
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/z3ResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_blue_dark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/z4ResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_green_dark"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text=" * "
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/z5ResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_green_dark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/z6ResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_orange_dark"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text=" = "
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/ratioResultText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="0.99"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

