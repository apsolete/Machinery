<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:dither="true"
            android:shape="rectangle"
            android:useLevel="false"
            android:visible="true">
            <gradient
                android:angle="270"
                android:endColor="@color/colorPink400Light"
                android:startColor="@color/colorPink400"/>
            <corners
                android:radius="16dp"/>
            <size
                android:width="32dp"
                android:height="30dp"/>
            <stroke
                android:width="0dp"
                android:color="#0000ffff"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:angle="270"
                android:endColor="@color/colorGray500"
                android:startColor="@color/colorGray500"/>
            <corners
                android:radius="16dp"/>
            <size
                android:width="32dp"
                android:height="30dp"/>
            <stroke
                android:width="0dp"
                android:color="#0000ffff"/>
        </shape>
    </item>
</selector>
