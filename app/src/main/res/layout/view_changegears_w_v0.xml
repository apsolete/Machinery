<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/contentCg"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior">

	<LinearLayout
		android:id="@+id/panesLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<RelativeLayout
			android:id="@+id/leftPanel"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.0">

			<Switch
                android:id="@+id/oneSetOfGears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:showText="true"
                android:textOff="Multiple sets"
                android:textOn="One set for all"
                android:textStyle="bold|italic"
                android:thumb="@drawable/switch_custom_selector"
                android:track="@drawable/switch_custom_track"/>

            <LinearLayout
                android:id="@+id/oneSetLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/oneSetOfGears">

                <Button
                    android:id="@+id/z0Set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Gears"/>

                <EditText
                    android:id="@+id/z0Gears"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:inputType="number|text"
                    android:maxEms="16"
                    android:minEms="6"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/gearsetScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/oneSetLayout">

                <GridLayout
                    android:id="@+id/gearsetGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="3">

                    <LinearLayout
                        android:id="@+id/z1Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/z1Set"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Z1"
                            android:textColor="@android:color/holo_red_dark"/>

                        <CheckBox
                            android:id="@+id/z1Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:enabled="false"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/z1Gears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number|text"
                            android:maxEms="8"
                            android:minEms="3"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/z2Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/z2Set"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Z2"
                            android:textColor="@android:color/holo_blue_dark"/>

                        <CheckBox
                            android:id="@+id/z2Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:enabled="false"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/z2Gears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number|text"
                            android:maxEms="8"
                            android:minEms="3"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/z3Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/z3Set"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Z3"
                            android:textColor="@android:color/holo_blue_dark"/>

                        <CheckBox
                            android:id="@+id/z3Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/z3Gears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number|text"
                            android:maxEms="8"
                            android:minEms="3"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/z4Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/z4Set"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Z4"
                            android:textColor="@android:color/holo_green_dark"/>

                        <CheckBox
                            android:id="@+id/z4Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/z4Gears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number|text"
                            android:maxEms="8"
                            android:minEms="3"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/z5Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="2"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/z5Set"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Z5"
                            android:textColor="@android:color/holo_green_dark"/>

                        <CheckBox
                            android:id="@+id/z5Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/z5Gears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number|text"
                            android:maxEms="8"
                            android:minEms="3"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/z6Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_row="2"
                        android:orientation="horizontal"
                        android:padding="6dp">

                        <Button
                            android:id="@+id/z6Set"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Z6"
                            android:textColor="@android:color/holo_orange_dark"/>

                        <CheckBox
                            android:id="@+id/z6Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/z6Gears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:inputType="number|text"
                            android:maxEms="8"
                            android:minEms="3"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>

                </GridLayout>

            </HorizontalScrollView>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rightPanel"
			android:layout_width="10dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.0">

			<LinearLayout
                android:id="@+id/calcModeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:padding="2dp"
                    android:text="Calculation mode"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold|italic"/>

                <Spinner
                    android:id="@+id/calcTypeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:id="@+id/threadPitchLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/threadPitchText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:text="Thread Pitch"/>

                    <EditText
                        android:id="@+id/threadPitchValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:ems="3"
                        android:inputType="numberDecimal"/>

                    <Spinner
                        android:id="@+id/threadPitchUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/screwPitchLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/leadScrewPitchText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:text="Leadscrew Pitch"/>

                    <EditText
                        android:id="@+id/leadScrewPitchValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:ems="3"
                        android:inputType="numberDecimal"/>

                    <Spinner
                        android:id="@+id/leadScrewPitchUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gearRatioLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ratioText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="6dp"
                            android:text="Ratio"/>

                        <Switch
                            android:id="@+id/ratioFractionSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="6dp"
                            android:showText="true"
                            android:textOff="x.y"
                            android:textOn="x/y"
                            android:thumb="@drawable/switch_custom_selector"
                            android:track="@drawable/switch_custom_track"/>

                        <EditText
                            android:id="@+id/ratioValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="6dp"
                            android:ems="3"
                            android:inputType="numberDecimal"/>

                        <LinearLayout
                            android:id="@+id/ratioFractionLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ratioNumeratorValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="6dp"
                                android:ems="3"
                                android:inputType="numberDecimal"/>

                            <TextView
                                android:id="@+id/solidusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="4dp"
                                android:text="/"
                                android:textAppearance="?android:attr/textAppearanceLarge"/>

                            <EditText
                                android:id="@+id/ratioDenominatorValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="6dp"
                                android:ems="3"
                                android:inputType="numberDecimal"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/ratioCalculated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:text="R = 0.0"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            </LinearLayout>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/progressLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/panesLayout"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/showPrev"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:src="@drawable/ic_arrow_back_white_24dp"/>

		<TextView
			android:id="@+id/resultFirstNumberText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:gravity="center"
			android:text="1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:gravity="center"
			android:text="-"/>

		<TextView
			android:id="@+id/resultLastNumberText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:gravity="center"
			android:text="100"/>

		<ImageButton
			android:id="@+id/showNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:src="@drawable/ic_arrow_forward_white_24dp"/>

	</LinearLayout>

	<ScrollView
		android:id="@+id/resultsScroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/progressLayout">

		<LinearLayout
			android:id="@+id/resultsLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"/>

	</ScrollView>

</RelativeLayout>

