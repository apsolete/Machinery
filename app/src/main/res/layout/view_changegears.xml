<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/contentCg"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingLeft="@dimen/horizontal_padding"
	android:paddingTop="@dimen/vertical_padding"
	android:paddingRight="@dimen/horizontal_padding"
	android:paddingBottom="@dimen/vertical_padding"
	app:layout_behavior="@string/appbar_scrolling_view_behavior">

	<LinearLayout
		android:id="@+id/panesLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:id="@+id/leftLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Switch
				android:id="@+id/oneSetForAllGears"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_margin="@dimen/layout_margin"
				android:showText="false"
				android:text="@string/use_one_kit"
				android:textStyle="italic" />

			<LinearLayout
				android:id="@+id/oneSetLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/oneSetForAllGears">

				<TextView
					android:id="@+id/z0Kit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="6dp"
					android:text="Gears:"
					android:textColor="@color/design_default_color_primary_dark" />

				<EditText
					android:id="@+id/z0Gears"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_weight="1"
					android:inputType="number|text"
					android:maxEms="16"
					android:minEms="6"
					android:textAppearance="?android:attr/textAppearanceSmall" />

			</LinearLayout>

			<HorizontalScrollView
				android:id="@+id/gearkitScroll"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/oneSetLayout">

				<GridLayout
					android:id="@+id/gearkitGrid"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:columnCount="4"
					android:rowCount="3">

					<LinearLayout
						android:id="@+id/z1Layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_row="0"
						android:layout_column="0"
						android:orientation="horizontal"
						android:padding="6dp">

						<CheckBox
							android:id="@+id/z1Select"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:checked="true"
							android:enabled="false"
							android:visibility="gone" />

						<CheckedTextView
							android:id="@+id/z1Kit"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_weight="1"
							android:text="@string/title_z1"
							android:textColor="@android:color/holo_red_dark" />

						<EditText
							android:id="@+id/z1Gears"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:inputType="number|text"
							android:maxEms="8"
							android:minEms="4"
							android:textAppearance="?android:attr/textAppearanceSmall" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/z2Layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_row="0"
						android:layout_column="1"
						android:orientation="horizontal"
						android:padding="6dp">

						<CheckBox
							android:id="@+id/z2Select"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:checked="true"
							android:enabled="false"
							android:visibility="gone" />

						<CheckedTextView
							android:id="@+id/z2Kit"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_weight="1"
							android:text="@string/title_z2"
							android:textColor="@android:color/holo_blue_dark" />

						<EditText
							android:id="@+id/z2Gears"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:inputType="number|text"
							android:maxEms="8"
							android:minEms="4"
							android:textAppearance="?android:attr/textAppearanceSmall" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/z3Layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_row="1"
						android:layout_column="1"
						android:orientation="horizontal"
						android:padding="6dp">

						<CheckBox
							android:id="@+id/z3Select"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:visibility="gone" />

						<CheckedTextView
							android:id="@+id/z3Kit"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_weight="1"
							android:text="@string/title_z3"
							android:textColor="@android:color/holo_blue_dark" />

						<EditText
							android:id="@+id/z3Gears"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:inputType="number|text"
							android:maxEms="8"
							android:minEms="4"
							android:textAppearance="?android:attr/textAppearanceSmall" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/z4Layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_row="1"
						android:layout_column="2"
						android:orientation="horizontal"
						android:padding="6dp">

						<CheckBox
							android:id="@+id/z4Select"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:visibility="gone" />

						<CheckedTextView
							android:id="@+id/z4Kit"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_weight="1"
							android:text="@string/title_z4"
							android:textColor="@android:color/holo_green_dark" />

						<EditText
							android:id="@+id/z4Gears"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:inputType="number|text"
							android:maxEms="8"
							android:minEms="4"
							android:textAppearance="?android:attr/textAppearanceSmall" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/z5Layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_row="2"
						android:layout_column="2"
						android:orientation="horizontal"
						android:padding="6dp">

						<CheckBox
							android:id="@+id/z5Select"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:visibility="gone" />

						<CheckedTextView
							android:id="@+id/z5Kit"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_weight="1"
							android:text="@string/title_z5"
							android:textColor="@android:color/holo_green_dark" />

						<EditText
							android:id="@+id/z5Gears"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:inputType="number|text"
							android:maxEms="8"
							android:minEms="4"
							android:textAppearance="?android:attr/textAppearanceSmall" />

					</LinearLayout>

					<LinearLayout
						android:id="@+id/z6Layout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_row="2"
						android:layout_column="3"
						android:orientation="horizontal"
						android:padding="6dp">

						<CheckBox
							android:id="@+id/z6Select"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:visibility="gone" />

						<CheckedTextView
							android:id="@+id/z6Kit"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_weight="1"
							android:text="@string/title_z6"
							android:textColor="@android:color/holo_orange_dark" />

						<EditText
							android:id="@+id/z6Gears"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:inputType="number|text"
							android:maxEms="8"
							android:minEms="4"
							android:textAppearance="?android:attr/textAppearanceSmall" />

					</LinearLayout>

				</GridLayout>

			</HorizontalScrollView>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rightLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<GridLayout
				android:id="@+id/modeLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="1"
					android:layout_column="0"
					android:layout_margin="6dp"
					android:padding="2dp"
					android:text="Mode"
					android:textColor="@android:color/holo_green_dark"
					android:textStyle="bold|italic" />

				<Spinner
					android:id="@+id/calcTypeSpinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="1"
					android:layout_column="1"
					android:layout_columnSpan="2"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin" />

				<!--<LinearLayout
            android:id="@+id/threadPitchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">-->

				<TextView
					android:id="@+id/threadPitchText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="2"
					android:layout_column="0"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin"
					android:text="Thread Pitch" />

				<EditText
					android:id="@+id/threadPitchValue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="2"
					android:layout_column="1"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin"
					android:ems="3"
					android:inputType="numberDecimal" />

				<Spinner
					android:id="@+id/threadUnitSpinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="2"
					android:layout_column="2"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin" />

				<!--</LinearLayout>-->

				<!--<LinearLayout
            android:id="@+id/screwPitchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">-->

				<TextView
					android:id="@+id/leadscrewPitchText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="3"
					android:layout_column="0"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin"
					android:text="Leadscrew Pitch" />

				<EditText
					android:id="@+id/screwPitchValue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="3"
					android:layout_column="1"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin"
					android:ems="3"
					android:inputType="numberDecimal" />

				<Spinner
					android:id="@+id/screwUnitSpinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="3"
					android:layout_column="2"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin" />

				<!--</LinearLayout>-->

				<!--<LinearLayout
            android:id="@+id/gearRatioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">-->

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="4"
					android:layout_column="0"
					android:layout_gravity="center_vertical"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/gearRatioText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_margin="@dimen/layout_margin"
						android:text="Ratio"
						android:visibility="gone" />

					<Switch
						android:id="@+id/ratioAsFractionSwitch"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_row="4"
						android:layout_column="2"
						android:layout_gravity="center_vertical"
						android:layout_margin="@dimen/layout_margin"
						android:showText="true"
						android:text="Ratio"
						android:textOff="x.y"
						android:textOn="x/y"
						android:thumb="@drawable/switch_custom_selector"
						android:track="@drawable/switch_custom_track" />

				</LinearLayout>

				<EditText
					android:id="@+id/gearRatioValue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="4"
					android:layout_column="1"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin"
					android:ems="3"
					android:inputType="numberDecimal" />

				<LinearLayout
					android:id="@+id/gearRatioFractionLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_row="4"
					android:layout_column="2"
					android:orientation="horizontal">

					<EditText
						android:id="@+id/gearRatioNumerator"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_margin="@dimen/layout_margin"
						android:ems="3"
						android:inputType="numberDecimal" />

					<TextView
						android:id="@+id/solidusText"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_margin="@dimen/layout_margin"
						android:text="/"
						android:textAppearance="?android:attr/textAppearanceLarge" />

					<EditText
						android:id="@+id/gearRatioDenominator"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_margin="@dimen/layout_margin"
						android:ems="3"
						android:inputType="numberDecimal" />

				</LinearLayout>


				<!--</LinearLayout>-->

				<TextView
					android:id="@+id/ratioResultText"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_row="5"
					android:layout_column="0"
					android:layout_columnSpan="3"
					android:layout_gravity="center_vertical"
					android:layout_margin="@dimen/layout_margin"
					android:text="R = 0.0"
					android:textAppearance="?android:attr/textAppearanceLarge" />

			</GridLayout>
		</RelativeLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/progressLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/showPrev"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:src="@drawable/ic_arrow_back_white_24dp" />

		<TextView
			android:id="@+id/resultFirstNumberText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:gravity="center"
			android:text="1" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:gravity="center"
			android:text="-" />

		<TextView
			android:id="@+id/resultLastNumberText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:gravity="center"
			android:text="100" />

		<ImageButton
			android:id="@+id/showNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="6dp"
			android:src="@drawable/ic_arrow_forward_white_24dp" />

	</LinearLayout>

	<ScrollView
		android:id="@+id/resultsScroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:id="@+id/resultsLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" />

	</ScrollView>

</LinearLayout>

