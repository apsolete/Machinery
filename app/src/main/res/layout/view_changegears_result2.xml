<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/border"
	android:orientation="horizontal"
	android:padding="8dp">

	<TextView
		android:id="@+id/resultNumberText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="2"
		android:gravity="right|center_vertical"
		android:text="100" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="4dp"
		android:gravity="left|center_vertical"
		android:text="." />

	<LinearLayout
		android:id="@+id/gears12Layout"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/z1Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="2"
			android:gravity="center"
			android:text="999"
			android:textAlignment="gravity"
			android:textColor="@android:color/holo_red_dark" />

		<TextView
			android:id="@+id/z1z2Div"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="/"
			android:textAlignment="center" />

		<TextView
			android:id="@+id/z2Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="2"
			android:gravity="center"
			android:text="999"
			android:textAlignment="gravity"
			android:textColor="@android:color/holo_blue_dark" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/gears34Layout"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/mult1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text=" x "
			android:textAlignment="center" />

		<TextView
			android:id="@+id/z3Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="2"
			android:gravity="center"
			android:text="999"
			android:textAlignment="gravity"
			android:textColor="@android:color/holo_blue_dark" />

		<TextView
			android:id="@+id/z3z4Div"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="/"
			android:textAlignment="center" />

		<TextView
			android:id="@+id/z4Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="2"
			android:gravity="center"
			android:text="999"
			android:textAlignment="gravity"
			android:textColor="@android:color/holo_green_dark" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/gears56Layout"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/mult2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text=" x "
			android:textAlignment="center" />

		<TextView
			android:id="@+id/z5Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="2"
			android:gravity="center"
			android:text="999"
			android:textAlignment="gravity"
			android:textColor="@android:color/holo_green_dark" />

		<TextView
			android:id="@+id/z5z6Div"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="/"
			android:textAlignment="center" />

		<TextView
			android:id="@+id/z6Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="2"
			android:gravity="center"
			android:text="999"
			android:textAlignment="gravity"
			android:textColor="@android:color/holo_orange_dark" />

	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="4dp"
		android:layout_marginEnd="4dp"
		android:gravity="center"
		android:text=" = "
		android:textAlignment="center" />

	<TextView
		android:id="@+id/ratioText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="0.99999"
		android:textAlignment="gravity" />

	<LinearLayout
		android:id="@+id/threadPitchLayout"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:layout_marginStart="10dp"
		android:visibility="visible">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text=" TP "
			android:textAlignment="center" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="4dp"
			android:layout_marginEnd="4dp"
			android:gravity="center"
			android:text=" = "
			android:textAlignment="center" />

		<TextView
			android:id="@+id/threadPitchText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="0.99999"
			android:textAlignment="gravity" />

	</LinearLayout>

</LinearLayout>

